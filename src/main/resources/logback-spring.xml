<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring-loggar till konsol -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- EGNA klasser till FIL -->
    <appender name="APP-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>target/logs/app.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DITT paketnamn! -->
    <logger name="se.iths.stefan.labbdriftvg" level="DEBUG" additivity="false">
        <appender-ref ref="APP-FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Spring endast konsol -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>